{
    "name": "fp/badaboom",
    "type": "library",
    "description": "Wise error catcher",
    "keywords": ["error handler", "exception handler"],
    "homepage": "http://github.com/formapro/BadaBoom",
    "license": "MIT",
    "authors": [
        {
            "name": "Vadim Tyukov",
            "email": "brainreflex@gmail.com"
        },
        {
            "name": "Maksim Kotlyar",
            "email": "kotlyar.maksim@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/serializer": ">=2.0.6",
        "symfony/options-resolver": ">=2.0"
    },
    "require-dev": {
        "swiftmailer/swiftmailer": ">=4.1.0",
        "fp/fumocker": "1.0.*",
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "ext-newrelic": "In case you want use newrelic.com service."
    },
    "autoload": {
        "psr-0": {
          "BadaBoom": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}